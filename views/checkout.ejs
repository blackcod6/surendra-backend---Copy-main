  <div class="checkout-container">
    <main>
      <div class="py-5 text-center">
        <h2 id="checkout-form">Checkout form</h2>
        <p style="color: #5e473e">Secure Checkout</p>
      </div>

      <div class="row g-5" style="margin: 4rem;margin-top: -5rem;">
        <div class="col-md-5 col-lg-4 order-md-last" style="width: 50rem;">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="your-cart">Your cart</span>
            <span class="badge bg-primary rounded-pill">3</span>
          </h4>
          <ul class="list-group mb-3" id="checkoutcartitem">

            <!-- <li class="list-group-item d-flex justify-content-between bg-body-tertiary">
